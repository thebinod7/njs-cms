<html>
<head>
    <% include common/head %>
    <!--additional JS and css-->
</head>
<body>
<header id="header">
    <% include common/header %>
</header>

<section id="main_content">
    <div class="page-title section lb">
        <div class="container">
            <div class="clearfix">
                <div class="title-area pull-left">
                    <h2>Node Blog <small>A basic cms based on Node.JS platform.</small></h2>
                </div><!-- /.pull-right -->
            </div><!-- end clearfix -->
        </div>
    </div><!-- end page-title -->

    <div class="section">
        <div class="container">

            <div class="row">
                <div class="content col-md-9 col-sm-12">

                    <div id="blog-post-list" class="row blog-list">

                        <%
                        blog.forEach(function(i, a) {
                        %>

                        <div class="col-md-6 col-sm-12">
                            <div class="blog-wrapper clearfix">
                                <div class="post-media">
                                    <div class="entry">
                                       <a href="/blog_list/<%= i.id %>"><img src="/img/uploads/<%= i.featuredImgUrl %>" alt="" class="img-responsive"></a>
                                    </div>
                                </div><!-- end media -->
                                <div class="blog-title">
                                    <div class="blog-meta">
                                        <ul class="list-inline">
                                            <li><a href="#"><i class="fa fa-clock-o"></i><%= i.dateAdded %> </a></li>
                                            <li><a href="#"><i class="fa fa-comments-o"></i> <%= i.category.categoryName %> </a></li>
                                        </ul><!-- end list -->
                                    </div><!-- end blog-meta -->
                                    <h4><a href="/blog_list/<%= i.id %>" title=""><%= i.title %></a></h4>
                                    <p>
                                    <div class="blog-ellipsis">
                                        <%- i.content %>
                                    </div>
                                    </p>
                                    <a href="/blog_list/<%=i.id%>" class="readmore" title="">Read more</a>
                                </div><!-- end blog-title -->
                            </div><!-- end clearfix -->
                        </div><!-- end col -->

                        <% }); %>

                    </div><!-- end row -->

                </div><!-- end content -->

                <div class="sidebar col-md-3 col-sm-12">
                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Search</h3>
                            <hr>
                        </div><!-- end widget-title -->
                        <form>
                            <input type="text" name="search" class="form-control" placeholder="Site search...">
                        </form>
                    </div><!-- end widget -->

                   <!-- <div class="widget clearfix">
                        <a href="#"><img src="upload/banner_01.jpg" alt="" class="img-responsive"></a>
                    </div> -->

                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Related Posts</h3>
                            <hr>
                        </div><!-- end widget-title -->
                        <div class="widget clearfix">
                            <div class="related-posts">
                                <div class="entry">
                                    <p><a href="blog-single.html" title=""> Whatâ€™s in My Desktop, 2016 edition.</a></p>
                                    <small>21 March 2016</small>
                                </div><!-- end entry -->
                                <div class="entry">
                                    <p><a href="blog-single.html" title="">Getting a Job After Coding World Event.</a></p>
                                    <small>20 March 2016</small>
                                </div><!-- end entry -->
                                <div class="entry">
                                    <p><a href="blog-single.html" title="">Arthur C. Clarke on Distributed Work.</a></p>
                                    <small>18 February 2016</small>
                                </div><!-- end entry -->
                                <div class="entry">
                                    <p><a href="blog-single.html" title="">Teach when you are filled with wonder.</a></p>
                                    <small>10 February 2016</small>
                                </div><!-- end entry -->
                            </div><!-- end related -->
                        </div><!-- end widget -->
                    </div>



                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Tags</h3>
                            <hr>
                        </div><!-- end widget-title -->
                        <div class="tags clearfix">
                            <a href="#">web design</a>
                            <a href="#">club</a>
                            <a href="#">html5</a>
                            <a href="#">css3</a>
                            <a href="#">app</a>
                            <a href="#">business</a>
                            <a href="#">material</a>
                            <a href="#">multi purpose</a>
                            <a href="#">photoshop</a>
                            <a href="#">icons</a>
                        </div><!-- end tags -->
                    </div><!-- end widget -->
                </div><!-- end col -->
            </div><!-- end row -->

        </div><!-- end container -->
    </div><!-- end section -->
</section>


<footer id="footer">
    <% include common/footer %>
</footer>

</body>
</html>

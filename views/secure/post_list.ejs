<!DOCTYPE html>
<html lang="en">

<% include ../common/head %>
<script src="/js/app/pages/add_category.js" type="text/javascript"></script>

<body class="leftmenu memberprofile">

<!-- PRELOADER -->
<div class="cssload-container">
    <div class="cssload-loader"></div>
</div>
<!-- end PRELOADER -->

<!-- ******************************************
START SITE HERE
********************************************** -->

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <div id="dashboard_logo" class="logo">
            <a href="/" target="_blank"><img id="logo" src="/img/logo.png" alt="CMS"></a>
        </div>
        <ul class="sidebar-nav">
            <li><a href="#">Dashboard <span><i class="fa fa-user"></i></span></a></li>
            <li><a href="/profile">Account Setting <span><i class="fa fa-cog"></i></span></a></li>
            <li><a href="/add_category">Add Category <span><i class="fa fa-plus"></i></span></a></li>
            <li><a href="/new_post">New Post <span><i class="fa fa-book"></i></span></a></li>
            <li class="active"><a href="/post_list">Blog Posts <span><i class="fa fa-briefcase"></i></span></a></li>
            <li><a href="/logout">Logout  <span><i class="fa fa-sign-out"></i></span></a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <div id="page-content-wrapper">

        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Blog Post List.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th>#Id</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Edit</th>
                            </thead>
                            <tbody>
                            <% for(var i=0; i<blog.length; i++) { %>
                            <tr>

                                <td><%= blog[i].id%></td>
                                <td><%= blog[i].title%></td>
                                <td><%= blog[i].category ? blog[i].category.categoryName : 'Uncategorized' %></td>
                                <td><a href="/post_list/<%= blog[i].id%>"><button class="btn btn-default btn-xs" data-title="Edit"><span class="glyphicon glyphicon-pencil"></span></button></a></td>

                            </tr>
                            <% }%>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

        <div class="space-top"></div>

        <% include ../common/footer %>

        <!-- end copyrights -->
        <!-- end copyrights -->
    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->


</body>
</html>
<!DOCTYPE html>
<html lang="en">

<% include ../common/head %>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
<script src="/js/vendors/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/js/app/pages/new_post.js" type="text/javascript"></script>

<body class="leftmenu memberprofile">

<!-- PRELOADER -->
<div class="cssload-container">
    <div class="cssload-loader"></div>
</div>
<!-- end PRELOADER -->

<!-- ******************************************
START SITE HERE
********************************************** -->

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <div id="dashboard_logo" class="logo">
            <a href="/" target="_blank"><img id="logo" src="/img/logo.png" alt="CMS"></a>
        </div>
        <ul class="sidebar-nav">
            <li><a href="#">Dashboard <span><i class="fa fa-user"></i></span></a></li>
            <li><a href="/profile">Account Setting <span><i class="fa fa-cog"></i></span></a></li>
            <li><a href="/add_category">Add Category <span><i class="fa fa-plus"></i></span></a></li>
            <li class="active"><a href="/new_post">New Post <span><i class="fa fa-book"></i></span></a></li>
            <li><a href="/post_list">Blog Posts <span><i class="fa fa-briefcase"></i></span></a></li>
            <li><a href="/logout">Logout  <span><i class="fa fa-sign-out"></i></span></a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <div id="page-content-wrapper">
        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Write your blog post.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form id= "uploadForm" enctype="multipart/form-data" action="/post/uploadImg" method="post" >
                            <div class="form-group">
                                <label for="title">Featured Image</label>
                            </div>
                            <input type="file" name="featuredImg" />
                            <input type="submit" name="submit" value="Upload Image">
                            <span id = "status"></span>
                        </form>

                        <form>
                            <div class="form-group">
                                <label for="category">Choose Category:</label>
                                <select class="form-control" id="post_category">
                                    <option value="0">Choose Category</option>
                                    <% cat.forEach(function (cat) { %>
                                    <option value="<%= cat.id %>"> <%= cat.categoryName %> <%})%> </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="title">Title:</label>
                                <input type="text" class="form-control" id="title" placeholder="Enter sweet and short appealing title">
                            </div>

                            <div class="form-group">
                                <label for="comment">Content:</label>
                                <textarea class="form-control" rows="5" id="editor1" name="editor1"></textarea>
                            </div>
                            <button type="button" id="btnAddConent" class="btn btn-default">Save</button>
                            <script>
                                CKEDITOR.replace( 'editor1' );
                                CKEDITOR.replace( 'editor1', {
                                    extraAllowedContent:  'img[alt,border,width,height,align,vspace,hspace,!src];'
                                } );
                                CKEDITOR.config.allowedContent = true;
                            </script>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

        <% include ../common/footer %>

        <!-- end copyrights -->
        <!-- end copyrights -->
    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->


</body>
</html>
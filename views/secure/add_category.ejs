<!DOCTYPE html>
<html lang="en">

<% include ../common/head %>
<script src="/js/app/pages/add_category.js" type="text/javascript"></script>

<body class="leftmenu memberprofile">

<!-- ******************************************
START SITE HERE
********************************************** -->

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <div id="dashboard_logo" class="logo">
            <a href="/"><img id="logo" src="/img/logo.png" alt="CMS"></a>
        </div>
        <ul class="sidebar-nav">
            <li><a href="#">Dashboard <span><i class="fa fa-user"></i></span></a></li>
            <li><a href="/profile">Account Setting <span><i class="fa fa-cog"></i></span></a></li>
            <li class="active"><a href="/add_category">Add Category <span><i class="fa fa-plus"></i></span></a></li>
            <li><a href="/new_post">New Post <span><i class="fa fa-book"></i></span></a></li>
            <li><a href="/post_list">Blog Posts <span><i class="fa fa-briefcase"></i></span></a></li>
            <li><a href="/logout">Logout  <span><i class="fa fa-sign-out"></i></span></a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <div id="page-content-wrapper">
        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Add category.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <label for="category">Category:</label>
                                <input type="text" class="form-control" id="categoryName" placeholder="Enter category name">
                            </div>

                            <div class="form-group">
                                <label for="comment">Description:</label>
                                <textarea class="form-control" rows="5" id="categoryDesc" placeholder="Enter short description"></textarea>
                            </div>
                            <button type="button" id="btnAddCategory" class="btn btn-default">Save</button>
                        </form>
                    </div>
                </div>
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Category List.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th>#Id</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Delete</th>
                            </thead>
                            <tbody>
                            <% for(var i=0; i<cat.length; i++) { %>
                            <tr>

                                <td><%= cat[i].id%></td>
                                <td><%= cat[i].categoryName%></td>
                                <td><%= cat[i].categoryDesc%></td>
                                <td><button id="btnDeleteCategory" class="btn btn-primary btn-xs" data-title="Delete"><span class="glyphicon glyphicon-remove-circle"></span></button></td>

                            </tr>
                            <% }%>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

        <% include ../common/footer %>

        <!-- end copyrights -->
        <!-- end copyrights -->
    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->


</body>
</html>
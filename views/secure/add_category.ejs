                                <input type="text" class="form-control" id="categoryName" placeholder="Enter category name">
                            </div>

                            <div class="form-group">
                                <label for="comment">Description:</label>
                                <textarea class="form-control" rows="11" id="categoryDesc" placeholder="Enter short description"></textarea>
                            </div>
                            <button type="button" id="btnAddCategory" class="btn btn-default">Save</button>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->

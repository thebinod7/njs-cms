<!DOCTYPE html>
<html lang="en">

<% include ../common/head %>
<script src="/js/vendors/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/js/app/pages/update_post.js" type="text/javascript"></script>

<body class="leftmenu memberprofile">

<!-- PRELOADER -->
<div class="cssload-container">
    <div class="cssload-loader"></div>
</div>
<!-- end PRELOADER -->

<!-- ******************************************
START SITE HERE
********************************************** -->

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <div id="dashboard_logo" class="logo">
            <a href="/" target="_blank"><img id="logo" src="/img/logo.png" alt="CMS"></a>
        </div>
        <ul class="sidebar-nav">
            <li><a href="#">Dashboard <span><i class="fa fa-user"></i></span></a></li>
            <li class="active"><a href="/profile">Account Setting <span><i class="fa fa-cog"></i></span></a></li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" href="#cat-acc">Category<span><i class="fa fa-tag"></i></span></a>
                <ul id="cat-acc" class="collapse" style="list-style: none; padding-left: 0; background: #222333;">
                    <li><a href="/add_category">Add<span><i class="fa fa-plus"></i></span></a></li>
                    <li><a href="/list_category">List<span><i class="fa fa-list"></i></span></a></li>
                </ul>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" href="#content-acc">Blog<span><i class="fa fa-book"></i></span></a>
                <ul id="content-acc" class="collapse" style="list-style: none; padding-left: 0; background: #222333;">
                    <li><a href="/new_post">Add Content <span><i class="fa fa-plus"></i></span></a></li>
                    <li><a href="/post_list">List Content <span><i class="fa fa-list"></i></span></a></li>
                </ul>
            </li>
            <li><a href="/logout">Logout  <span><i class="fa fa-sign-out"></i></span></a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <div id="page-content-wrapper">
        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Update your blog post.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <label for="category">Choose Category:</label>
                                <select class="form-control" id="post_category">
                                    <option value="0">Choose Category</option>
                                    <% category.forEach(function (category) { %>
                                    <option value="<%= category.id %>"> <%= category.categoryName %> <%})%> </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="title">Title:</label>
                                <input type="text" value="<%= blog.title %>" class="form-control" id="title" placeholder="Enter sweet and short appealing title">
                            </div>

                            <div class="form-group">
                                <label for="comment">Content:</label>
                                <textarea class="form-control" rows="5" id="editor1" name="editor1"><%= blog.content %></textarea>
                            </div>
                            <button type="button" id="btnUpdateContent" class="btn btn-default">Save</button>
                            <button type="button" id="btnDeleteContent" class="btn btn-default">Delete</button>
                            <script>
                                CKEDITOR.replace( 'editor1' );
                                CKEDITOR.replace( 'editor1', {
                                    extraAllowedContent:  'img[alt,border,width,height,align,vspace,hspace,!src];'
                                } );
                                CKEDITOR.config.allowedContent = true;
                            </script>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

        <% include ../common/footer %>

        <!-- end copyrights -->
        <!-- end copyrights -->
    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->


</body>
</html>
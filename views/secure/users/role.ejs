    <div id="page-content-wrapper">
        <a href="#menu-toggle" class="menuopener" id="menu-toggle"><i class="fa fa-bars"></i></a>

        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Add User Roles.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form id="roleForm" method="POST" action="/role/add">
                            <div class="form-group">
                                <label for="category">Role:</label>
                                <input type="text" class="form-control" name="roleName" placeholder="Enter name of role">
                            </div>

                            <div class="form-group">
                                <label for="category">Permissions:</label><br>
                                <label class="checkbox-inline"><input type="checkbox" value="Read">Read</label>
                                <label class="checkbox-inline"><input type="checkbox" value="Write">Write</label>
                                <label class="checkbox-inline"><input type="checkbox" value="Publish">Publish</label>
                                <label class="checkbox-inline"><input type="checkbox" value="UserManger">UserManger</label>
                            </div>


                            <div class="form-group">
                                <label for="comment">Description:</label>
                                <textarea class="form-control" rows="4" id="roleDesc" placeholder="Enter role description"></textarea>
                            </div>
                            <button type="submit" name="btnAddRole" class="btn btn-default">Save</button>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->


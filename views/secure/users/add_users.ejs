<!DOCTYPE html>
<html lang="en">

<% include ../../common/head %>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
<script src="/js/vendors/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/js/app/pages/new_post.js" type="text/javascript"></script>

<body class="leftmenu memberprofile">


<!-- ******************************************
START SITE HERE
********************************************** -->

<div id="wrapper">
    <!-- Sidebar -->
    <% include ../../common/sidebar_nav %>
    <!-- End of Sidebar -->


    <div id="page-content-wrapper">
        <a href="#menu-toggle" class="menuopener" id="menu-toggle"><i class="fa fa-bars"></i></a>
        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Add new user to cms family.</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <label for="category">* User Role:</label>
                                <select class="form-control" id="user_role">
                                    <option value="0">--User Role--</option>
                                    <% role.forEach(function (role) { %>
                                    <option value="<%= role.id %>"> <%= role.roleName %> <%})%> </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>* First Name:</label>
                                <input type="text" class="form-control" id="fname" placeholder="Enter first name of user">
                            </div>

                            <div class="form-group">
                                <label>* Last Name:</label>
                                <input type="text" class="form-control" id="lname" placeholder="Enter last name of user">
                            </div>

                            <div class="form-group">
                                <label>Contact Number:</label>
                                <input type="text" class="form-control" id="phone" placeholder="Enter contact number of user">
                            </div>

                            <div class="form-group">
                                <label>* Email:</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter email address of user">
                            </div>

                            <div class="form-group">
                                <label>Social Link:</label>
                                <input type="text" class="form-control" id="socialUrl" placeholder="Enter social profile link">
                            </div>

                            <button type="button" id="btnAddUsers" class="btn btn-default">Save</button><br>
                            <span class="text-info">*Note : password for user will be automatically created!</span>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->

<script src="js/custom.js"></script>
<script src="/js/app/pages/add_users.js" type="text/javascript"></script>
</body>
</html>
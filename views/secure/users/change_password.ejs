<html>
<head>
    <% include ../../common/head %>
    <!--additional JS and css-->
    <!--<script src="/js/app/pages/admin.js" type="text/javascript"></script>-->
</head>
<body>
<header id="header">
    <% include ../../common/header %>
</header>

<section id="content_body">
    <div class="space-box">
        <div class="container-fluid">
            <form class="defaultform row"  method="POST" action="/users/change/password">
                <div class="col-md-6 col-md-offset-3">
                    <div class="register-widget clearfix">
                        <div class="space-top-small"></div>
                        <div class="widget-title">
                            <h2>Set your account password</h2>
                            <hr>
                            <div id="errorMsg">
                                <%= messages.message %>
                            </div>
                        </div><!-- end title -->
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Email</label>
                                <input type="email" name="email" hidden="hidden"  placeholder="Email address" disabled="disabled" value="<%= verify.email %>" class="form-control">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Old Password</label>
                                <input type="password" name="password" required="required"  placeholder="Enter a strong password" class="form-control">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>New Password</label>
                                <input type="password" name="newPassword" required="required"  placeholder="Enter a strong password" class="form-control">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Confirm Password</label>
                                <input type="password" name="confirmPass" required="required"  placeholder="Confirm password" class="form-control">
                            </div>
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-default">Submit</button><br>
                            </div>
                        </div>
                    </div>
                    <div class="space-top"></div>
                </div>
            </form><!-- end row -->
        </div><!-- end container -->
    </div>

</section>


<footer id="footer">
    <% include ../../common/footer %>
</footer>

</body>
</html>

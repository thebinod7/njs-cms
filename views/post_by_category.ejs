<html>
<head>
    <% include common/head %>
    <!--additional JS and css-->
</head>
<body>
<header id="header">
    <% include common/header %>
</header>

<section id="content_body">
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="content col-md-12 col-sm-12">
                    <div class="row blog-list">

                        <%
                        blog.forEach(function(i, a) {
                        %>

                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="blog-wrapper clearfix">
                                <div class="post-media">
                                    <div class="entry">
                                        <a href="/blog/<%= i.seoUrl %>"><img src="/img/uploads/<%= i.featuredImgUrl %>" alt="" class="img-responsive"></a>
                                    </div>
                                </div><!-- end media -->
                                <div class="blog-title">
                                    <div class="blog-meta">
                                        <ul class="list-inline">
                                            <li><a href="https://www.facebook.com/Leonidas.Binod.169" target="_blank"><i class="fa fa-user"></i>Binod Chaudhary</a></li>
                                            <li><a href=""><i class="fa fa-clock-o"></i> <%= moment(i.dateAdded).format(shortDateFormat) %></a></li>
                                            <li><a href="/<%= i.category.id %>"><i class="fa fa-tag"></i> <%= i.category.categoryName %></a></li>
                                        </ul><!-- end list -->
                                    </div><!-- end blog-meta -->
                                    <h4><a href="/blog/<%= i.seoUrl %>"><%= i.title %></a></h4>
                                    <p>
                                    <div class="blog-ellipsis">
                                        <%- i.content %>
                                    </div>
                                    </p>
                                    <a href="/blog/<%= i.seoUrl %>" class="readmore" title="">Read more</a>
                                </div><!-- end blog-title -->
                            </div><!-- end clearfix -->
                        </div><!-- end col -->

                        <% }); %>

                    </div><!-- end row -->

                </div><!-- end content -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
</section>


<footer id="footer">
    <% include common/footer %>
</footer>

</body>
</html>